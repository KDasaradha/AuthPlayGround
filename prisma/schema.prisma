// Authentication & Authorization Playground Database Schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Core user management
model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String?  // For basic auth
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  sessions      Session[]
  apiKeys       ApiKey[]
  otpCodes      OtpCode[]
  magicLinks    MagicLink[]
  userRoles     UserRole[]
  auditLogs     AuditLog[]
  socialAuths   SocialAuth[]
  totpSecrets   TotpSecret[]
  
  @@map("users")
}

// Session management
model Session {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("sessions")
}

// API Key management
model ApiKey {
  id          String   @id @default(cuid())
  name        String
  key         String   @unique
  userId      String
  permissions String   // JSON array of permissions
  expiresAt   DateTime?
  createdAt   DateTime @default(now())
  lastUsedAt  DateTime?
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("api_keys")
}

// OTP codes for email/SMS
model OtpCode {
  id        String   @id @default(cuid())
  userId    String
  code      String
  type      String   // email, sms
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("otp_codes")
}

// Magic links for passwordless login
model MagicLink {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("magic_links")
}

// TOTP secrets for 2FA
model TotpSecret {
  id        String   @id @default(cuid())
  userId    String   @unique
  secret    String   @unique
  isEnabled Boolean  @default(false)
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("totp_secrets")
}

// Social authentication providers
model SocialAuth {
  id           String   @id @default(cuid())
  userId       String
  provider     String   // google, github, facebook, etc.
  providerId   String   // Provider's user ID
  accessToken  String?
  refreshToken String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([provider, providerId])
  @@map("social_auths")
}

// Role-based access control
model Role {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  level       Int      // For hierarchical RBAC
  createdAt   DateTime @default(now())
  
  // Relations
  userRoles     UserRole[]
  rolePermissions RolePermission[]
  
  @@map("roles")
}

// User-Role assignments
model UserRole {
  id     String @id @default(cuid())
  userId String
  roleId String
  scope  String? // For multi-tenant/org-based auth
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  role Role @relation(fields: [roleId], references: [id], onDelete: Cascade)
  
  @@unique([userId, roleId, scope])
  @@map("user_roles")
}

// Permission definitions
model Permission {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  resource    String   // Resource this permission applies to
  action      String   // Action (read, write, delete, etc.)
  createdAt   DateTime @default(now())
  
  rolePermissions RolePermission[]
  
  @@unique([resource, action])
  @@map("permissions")
}

// Role-Permission assignments
model RolePermission {
  id           String @id @default(cuid())
  roleId       String
  permissionId String
  
  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  
  @@unique([roleId, permissionId])
  @@map("role_permissions")
}

// Attribute-Based Access Control policies
model AbacPolicy {
  id          String   @id @default(cuid())
  name        String
  description String?
  rules       String   // JSON rules
  effect      String   // allow, deny
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  @@map("abac_policies")
}

// Access Control Lists
model AclEntry {
  id         String   @id @default(cuid())
  principal  String   // User ID, role ID, or 'public'
  resource   String   // Resource identifier
  permission String   // Permission type
  effect     String   // allow, deny
  createdAt  DateTime @default(now())
  
  @@unique([principal, resource, permission])
  @@map("acl_entries")
}

// Audit logging
model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String   // login, logout, access_denied, etc.
  resource  String?  // Resource accessed
  details   String?  // JSON details
  ipAddress String?
  userAgent String?
  createdAt DateTime @default(now())
  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@map("audit_logs")
}

// OAuth2 clients (for simulation)
model OAuthClient {
  id           String   @id @default(cuid())
  name         String
  clientId     String   @unique
  clientSecret String   @unique
  redirectUris String   // JSON array of redirect URIs
  scopes       String   // JSON array of allowed scopes
  createdAt    DateTime @default(now())
  
  @@map("oauth_clients")
}

// OAuth2 tokens
model OAuthToken {
  id           String   @id @default(cuid())
  clientId     String
  userId       String?
  accessToken  String   @unique
  refreshToken String?  @unique
  scopes       String   // JSON array of granted scopes
  expiresAt    DateTime
  createdAt    DateTime @default(now())
  
  @@map("oauth_tokens")
}